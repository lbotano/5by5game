{
    "compileOnSave": false,
    "compilerOptions": {
        "outDir": "./dist",
        "moduleResolution": "node",
        "target": "es5",
        "baseUrl": "./src/",
        "paths": {
            "@app/*": ["app/*"],
            "@models/*": ["models/*"],
            "@assets/*": ["assets/*"]
        }
    },
    "forceConsistentCasingInFileNames": true,
    "noImplicitReturns": true,
    "strict": true,
    "noUnusedLocals": true
}
